{
  "manifest_version": 3,
  "name": "Sauce for TCG Collector",
  "description": "Adds extra functionality to TCG Collector app",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "TCG Collector Settings",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://www.tcgcollector.com/cards/*/*"
      ],
      "js": [
        "lib/vendor/google-sheets-parser.js",
        "lib/utils.js",
        "lib/card-detail.js"
      ],
      "css": [
        "css/style.css"
      ]
    },
    {
      "run_at": "document_end",
      "matches": [
        "https://www.tcgcollector.com/dashboard"
      ],
      "js": [
        "lib/vendor/echarts.min.js",
        "lib/vendor/google-sheets-parser.js",
        "lib/utils.js",
        "lib/dashboard.js"
      ],
      "css": [
        "css/style.css"
      ]
    },
    {
      "run_at": "document_end",
      "matches": [
        "https://www.tcgcollector.com/*"
      ],
      "js": [
        "lib/utils.js",
        "lib/menu.js",
        "lib/hide-prices.js"
      ]
    },
    {
      "run_at": "document_end",
      "matches": [
        "https://www.tcgcollector.com/expansions/*"
      ],
      "js": [
        "lib/vendor/google-sheets-parser.js",
        "lib/utils.js",
        "lib/expansions.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "lib/*", "css/*" ],
      "matches": [ "https://www.tcgcollector.com/*" ]
    }
  ],
  "permissions": [
    "declarativeContent", "storage", "management"
  ]
}